<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/widget_size_35"
            android:padding="@dimen/widget_size_15"
            android:background="@drawable/bg_conner_12"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imvRobot"
                    android:layout_width="@dimen/widget_size_131"
                    android:layout_height="@dimen/widget_size_150"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_error_dolphin" />
                <TextView
                    android:id="@+id/tvError"
                    style="@style/TextAppearance.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:lines="1"
                    android:text="Error"
                    android:textAllCaps="false"
                    android:textColor="@color/tv_color_main"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/font_size_18" />
                <TextView
                    android:id="@+id/tvAccept"
                    style="@style/TextAppearance.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingVertical="@dimen/widget_size_10"
                    android:text="This isnâ€™t Physics! Please scan the correct subject area or try different text"
                    android:textAllCaps="false"
                    android:textColor="@color/tv_color_main"
                    android:textSize="@dimen/font_size_14" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>