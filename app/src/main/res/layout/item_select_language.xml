<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="@dimen/widget_size_10"
        android:layout_marginVertical="@dimen/widget_size_8"
        android:foreground="@drawable/selector_conner_20"
        app:cardBackgroundColor="#F5F5F5"
        app:cardCornerRadius="@dimen/widget_size_20"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:id="@+id/vEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/widget_size_12"
            android:paddingVertical="@dimen/widget_size_3"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/widget_size_34"
                android:layout_height="@dimen/widget_size_34"
                android:src="@drawable/ic_en" />

            <TextView
                android:id="@+id/txtLanguage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:text="English"
                android:textColor="#032C22"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imvTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:srcCompat="@drawable/ic_language_done" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>